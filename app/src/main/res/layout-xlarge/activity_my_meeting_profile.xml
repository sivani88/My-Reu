<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.constraintlayout.widget.ConstraintLayout

        android:id="@+id/constraint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="cUI.ui.main.MyMeetinProfile.MyMeetingProfileActivity">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageView2"
            android:layout_width="503dp"
            android:layout_height="206dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/circle"
            android:contentDescription="@string/Dessin_pour_activite_profile"
            android:src="@drawable/meeting"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/NamePlace"
            android:layout_width="805dp"
            android:layout_height="80dp"
            android:layout_marginStart="26dp"
            android:layout_marginTop="460dp"
            android:layout_marginEnd="34dp"
            android:hint="@string/nom_de_la_salle"
            android:textAlignment="center"
            android:textSize="@dimen/_16sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.481"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/HeureDateMeeting"
            android:layout_width="414dp"
            android:layout_height="80dp"
            android:layout_marginStart="96dp"
            android:layout_marginTop="72dp"
            android:contentDescription="@string/heure_de_reunion"
            android:text="@string/heure_de_reunion"
            android:textAlignment="center"
            android:textSize="@dimen/_16sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/NamePlace" />

        <TextView
            android:id="@+id/textHeure"
            android:layout_width="333dp"
            android:layout_height="78dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="72dp"
            android:contentDescription="@string/Heure"
            android:textSize="@dimen/_16sdp"
            android:text="@string/Heure"
            app:layout_constraintStart_toEndOf="@+id/HeureDateMeeting"
            app:layout_constraintTop_toBottomOf="@+id/NamePlace" />

        <TextView
            android:id="@+id/Sujet"
            android:layout_width="794dp"
            android:layout_height="102dp"
            android:layout_marginStart="29dp"
            android:layout_marginTop="302dp"
            android:layout_marginEnd="38dp"
            android:contentDescription="@string/sujet_de_la_reunion"
            android:text="@string/sujet_de_la_reunion"
            android:textAlignment="center"
            android:textSize="@dimen/_16sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.371"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/Email"
            android:layout_width="876dp"
            android:layout_height="817dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="726dp"
            android:layout_marginEnd="50dp"
            android:contentDescription="@string/Email"
            android:padding="8dp"
            android:text="@string/Mail_profile"
            android:textAlignment="center"
            android:textSize="@dimen/_16sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.771"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>


