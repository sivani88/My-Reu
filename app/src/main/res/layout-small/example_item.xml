<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="105dp">


        <TextView
            android:id="@+id/email"
            android:layout_width="185dp"
            android:layout_height="23dp"
            android:layout_marginTop="1dp"
            android:contentDescription="@string/Email"
            android:maxLines="1"
            android:text="@string/Email"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sujet" />

        <TextView
            android:id="@+id/NomSalle"
            android:layout_width="184dp"
            android:layout_height="23dp"

            android:contentDescription="@string/nom_de_la_salle"
            android:maxLines="1"
            android:text="@string/nom_de_la_salle"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/heure"
            android:layout_width="189dp"
            android:layout_height="22dp"
            android:layout_marginTop="4dp"
            android:text="@string/heure_de_reunion"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/NomSalle" />

        <TextView
            android:id="@+id/sujet"
            android:layout_width="187dp"
            android:layout_height="25dp"
            android:maxLines="1"
            android:text="@string/sujet_de_la_reunion"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/heure" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>