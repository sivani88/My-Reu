<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.constraintlayout.widget.ConstraintLayout

        android:id="@+id/constraint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="cUI.ui.main.MyMeetinProfile.MyMeetingProfileActivity">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageView2"
            android:layout_width="433dp"
            android:layout_height="142dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/circle"
            android:contentDescription="@string/Dessin_pour_activite_profile"
            android:src="@drawable/meeting"
            app:layout_constraintBottom_toTopOf="@+id/NamePlace"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/NamePlace"
            android:layout_width="541dp"
            android:layout_height="60dp"
            android:layout_marginStart="26dp"
            android:layout_marginTop="281dp"
            android:layout_marginEnd="34dp"
            android:layout_marginBottom="477dp"
            android:hint="@string/nom_de_la_salle"
            android:textSize="@dimen/_10sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/HeureDateMeeting"
            android:layout_width="243dp"
            android:layout_height="47dp"
            android:layout_marginStart="29dp"
            android:layout_marginTop="32dp"
            android:contentDescription="@string/heure_de_reunion"
            android:text="@string/heure_de_reunion"
            android:textSize="@dimen/_10sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/NamePlace" />

        <TextView
            android:id="@+id/Sujet"
            android:layout_width="534dp"
            android:layout_height="51dp"
            android:layout_marginStart="29dp"
            android:layout_marginTop="199dp"
            android:layout_marginEnd="38dp"
            android:layout_marginBottom="568dp"
            android:contentDescription="@string/sujet_de_la_reunion"
            android:text="@string/sujet_de_la_reunion"
            android:textSize="@dimen/_10sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/textHeure"
            android:layout_width="271dp"
            android:layout_height="42dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="32dp"
            android:contentDescription="@string/Heure"
            android:text="@string/Heure"
            android:textSize="@dimen/_10sdp"
            app:layout_constraintStart_toEndOf="@+id/HeureDateMeeting"
            app:layout_constraintTop_toBottomOf="@+id/NamePlace" />

        <TextView
            android:id="@+id/Email"
            android:layout_width="583dp"
            android:layout_height="345dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="452dp"
            android:layout_marginEnd="50dp"
            android:contentDescription="@string/Email"
            android:padding="8dp"
            android:text="@string/Mail_profile"
            android:textSize="@dimen/_10sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.349"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>


