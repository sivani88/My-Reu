<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cUI.MyMeetingProfileActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageView2"
        android:layout_width="210dp"
        android:layout_height="131dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/circle"
        android:contentDescription="@string/Desein_pour_activiter_profile"
        android:src="@drawable/meeting"
        app:layout_constraintBottom_toTopOf="@+id/NamePlace"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.219" />

    <TextView
        android:id="@+id/NamePlace"
        android:layout_width="279dp"
        android:layout_height="34dp"
        android:layout_marginBottom="20dp"
        android:hint="@string/nom_de_la_salle"
        app:layout_constraintBottom_toTopOf="@+id/HeureDateMeeting"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="@+id/imageView2" />

    <TextView
        android:id="@+id/HeureDateMeeting"
        android:layout_width="283dp"
        android:layout_height="37dp"
        android:layout_marginBottom="20dp"
        android:contentDescription="@string/heure_de_reunion"
        android:text="@string/heure_de_reunion"
        app:layout_constraintBottom_toTopOf="@+id/Sujet"
        app:layout_constraintEnd_toEndOf="@+id/NamePlace"
        app:layout_constraintStart_toStartOf="@+id/NamePlace" />

    <TextView
        android:id="@+id/Sujet"
        android:layout_width="286dp"
        android:layout_height="36dp"
        android:layout_marginBottom="8dp"
        android:contentDescription="@string/sujet_de_la_reunion"
        android:text="@string/sujet_de_la_reunion"
        app:layout_constraintBottom_toTopOf="@+id/scrollView2"
        app:layout_constraintEnd_toEndOf="@+id/HeureDateMeeting"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/HeureDateMeeting" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="331dp"
        android:layout_height="273dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/Sujet"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintStart_toStartOf="@+id/Sujet">

        <TextView
            android:id="@+id/Email"
            android:layout_width="281dp"
            android:layout_height="148dp"
            android:layout_margin="8dp"
            android:layout_marginTop="40dp"
            android:contentDescription="@string/Email"
            android:padding="8dp"
            android:text="@string/Mail_profile"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.576"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Sujet" />
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>